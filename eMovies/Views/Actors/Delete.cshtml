@model Actor

@{
	ViewData["Title"] = "Delete Actor";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Delete confirmation for @Model.FullName</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group text-center">
					<img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
				</div>
				<div class="form-group">
					<label asp-for="ProfilePictureURL" class="col-md-6 col-form-label"></label>
					<input asp-for="ProfilePictureURL" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="FullName" class="col-md-6 col-form-label"></label>
					<input asp-for="FullName" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="Bio" class="col-md-6 col-form-label"></label>
					<input asp-for="Bio" class="form-control" readonly />
				</div>
				<div class="form-group mt-3">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id"/>
						<input type="submit" value="Confirm" class="btn btn-danger text-white float-end" />
					</form>
					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script>
		$(document).ready(function () {
			var output = document.getElementById('ProfilePicturePreview');
			output.src = $("#ProfilePictureURL").val();
		})
	</script>
}