@model Actor

@{
	ViewData["Title"] = "Details of the Actor";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Details for @Model.FullName</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group text-center">
					<img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
				</div>
				<div class="form-group">
					<label asp-for="ProfilePictureURL" class="col-md-6 col-form-label"></label>
					<input asp-for="ProfilePictureURL" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="FullName" class="col-md-6 col-form-label"></label>
					<input asp-for="FullName" class="form-control" readonly />
				</div>
				<div class="form-group">
					<label asp-for="Bio" class="col-md-6 col-form-label"></label>
					<input asp-for="Bio" class="form-control" readonly />
				</div>
				<div class="form-group mt-3">
					<a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script>
		$(document).ready(function () {
			var output = document.getElementById('ProfilePicturePreview');
			output.src = $("#ProfilePictureURL").val();
		})
	</script>
}